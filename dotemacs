(dotemacs/load-user-file "rtags.el")
(dotemacs/load-user-file "flycheck.el")
;; Modes
(dotemacs/load-user-file "modes.el")

;; Language specific
(dotemacs/load-user-file "lisp.el")
(dotemacs/load-user-file "c-family.el")
